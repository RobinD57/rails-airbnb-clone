<div class="outer-box-form">
  <div>
    <h2>Log in</h2>
  </div>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { class: "login-input", autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { class: "login-input", autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", { class: "submit-login-button" }%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
