<div class="outer-box-signup">
  <div class="login-title">
    <h2>Sign up</h2>
  </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  label: false,
                  input_html: { class: "login-input", placeholder: "first name", autocomplete: "first_name" }%>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  label: false,
                  input_html: { class: "login-input", placeholder: "last name", autocomplete: "last_name" }%>
      <%= f.input :birthdate,
                  required: true,
                  autofocus: true,
                  label: false,
                  input_html: { class: "login-input", placeholder: "birthdate", autocomplete: "birthdate" }%>
      <%= f.input :gender,
                  required: true,
                  autofocus: true,
                  label: false,
                  input_html: { class: "login-input", placeholder: "gender", autocomplete: "gender" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: false,
                  input_html: { class: "login-input", placeholder: "email", autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  label: false,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { class: "login-input", placeholder: "password", autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  label: false,
                  input_html: { class: "login-input", placeholder: "confirm password", autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", { class: "submit-login-button" } %>
    </div>
  <% end %>

  <div class="d-flex justify-content-between">
    <%= render "devise/shared/links" %>
  </div>
</div>
