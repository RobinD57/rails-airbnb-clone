<div id="carouselExampleIndicators" class="carousel slide w-50 p-2" style="height: 400px;" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= cl_image_tag @listing.photos[0].key, height: 400, crop: :fill, class: "d-block w-100 border-radius" %>
    </div>
    <div class="carousel-item">
      <%= cl_image_tag @listing.photos[1].key, height: 400, crop: :fill, class: "d-block w-100 border-radius" %>
    </div>
    <div class="carousel-item">
      <%= cl_image_tag @listing.photos[2].key, height: 400, crop: :fill, class: "d-block w-100 border-radius" %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

